{
  "dependencies": {
    "@next/env": "16.1.1",
    "async-retry": "1.3.3",
    "commitizen": "4.3.1",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "^14.2.5",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "^7.6.1",
    "pg": "8.16.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "secretlint": "9.3.4",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um clone do projeto tabnews",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run services:wait:database && npm run migrations:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:write": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run docker:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run docker:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "docker:up": "docker compose -f infra/compose.yaml up -d",
    "docker:down": "docker compose -f infra/compose.yaml down",
    "docker:stop": "docker compose -f infra/compose.yaml stop",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "Paizao",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "13.5.11",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.6.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
